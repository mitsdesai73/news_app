{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "env": {
        "es6": true
    },
    "ignorePatterns": [
        "**/coverage",
        "**/dist",
        "**/node_modules"
    ],
    "rules": {
        "no-console": 0,
        "no-debugger": 1,
        "no-var": 1,
        "no-trailing-spaces": 1,
        "eol-last": 0,
        "no-underscore-dangle": 0,
        "no-alert": 0,
        "no-lone-blocks": 0,
        "import/extensions": 1,
        "import/no-named-as-default": 0,
        "import/no-absolute-path": 0,
        "no-async-promise-executor": 0,
        "prefer-promise-reject-errors": 0,
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-throw-literal": [
            "off"
        ]
    }
}